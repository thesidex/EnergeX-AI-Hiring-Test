APP_ENV=local
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_NAME=energeX-api

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=energeX
DB_USERNAME=root
DB_PASSWORD=secret

# Cache / Redis
CACHE_DRIVER=redis
CACHE_PREFIX=energeX_cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# JWT
JWT_SECRET=your-long-random-secret
JWT_TTL=3600
JWT_ISS=energeX-api
JWT_AUD=energeX-clients
JWT_LEEWAY=60

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173
CORS_ALLOW_CREDENTIALS=false
CORS_EXPOSE_HEADERS=
CORS_MAX_AGE=600
